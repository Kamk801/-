//后序线索二叉树找前驱  
#include<stdlib.h>
typedef struct tree{
	int data;
	TreeNode *lchild;   //三叉链表
	TreeNode* rchild;
	int ltag, rtag ; //1为线索   0为孩子
}TreeNode,*Tree;
TreeNode* pre = NULL;

TreeNode*  nextchild(TreeNode* p) {
	if (p->rtag == 1 && p->ltag == 0) {
		return p->lchild;
	}
	else if(p->rtag==0){
		return p->rchild;
	}
}
